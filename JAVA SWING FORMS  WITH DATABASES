    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
    
        Class.forName("com.mysql.cj.jdbc.Driver");
        
      
        sqlConn = DriverManager.getConnection(DATACONN, USERNAME, PASSWORD);
        
  
        pst = sqlConn.prepareStatement("INSERT INTO registration (ID, NAME, GENDER, ADDRESS, CONTACT) VALUES (?, ?, ?, ?, ?)");
        
        // Set the parameters for the SQL query
        pst.setString(1, jTextField1.getText()); // ID
        pst.setString(2, jTextField2.getText()); // Name
        pst.setString(3, jTextField3.getText()); // Gender
        pst.setString(4, jTextField4.getText()); // Address
        pst.setString(5, jTextField5.getText()); // Contact
        
        // Execute the query
        pst.executeUpdate();
        
        // Show confirmation message
        JOptionPane.showMessageDialog(this, "Record added successfully");
        
        // Update the database table
        upDateDB();
    } catch (ClassNotFoundException | SQLException ex) {
        // Show error message
        JOptionPane.showMessageDialog(this, "Error: " + ex.getMessage());
    } finally {
        // Ensure resources are closed properly
        try {
            if (pst != null) pst.close();
            if (sqlConn != null) sqlConn.close();
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Error closing resources: " + e.getMessage());
        }
    }

    }                                        

